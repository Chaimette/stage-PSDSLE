{% extends 'layout/base.html.twig' %}

{% block title %}{{ section.nom }}{% endblock %}
{% block meta_description %}{{ section.meta_description }}{% endblock %}

{% block content %}
<section class="hero-section">
  <div class="hero-content">
   <img src="/assets/images/logo-final-trans.png" alt="" style="max-width:400px;">
       <h1>{{ section.nom }}</h1>

  </div>
</section>


<section class="service-intro">
  <h2>Nos {{ section.nom|lower }}</h2>
  <p>{{ section.description|default('')|nl2br }}</p>
  <p>Les prestations proposées sont pour adultes comme enfants, et peuvent se faire en solo ou duo, le tarif est alors à multiplier par 2.</p>
</section>

<section class="service-accordion">
  <div class="container">
    
    {% for prestation in prestations %}
    <div class="accordion-item" id="{{ prestation.id }}">
      <div class="accordion-header" onclick="toggleAccordion(this)">
        <h3>{{ prestation.nom }}</h3>
        <span class="accordion-icon">▾</span>
      </div>
      <div class="accordion-content">
        <div class="service-details">
            {% if prestation.tarifs is defined and prestation.tarifs|length %}
              <h4>Prix :</h4>
              <ul>
                {% for tarif in prestation.tarifs %}
                  <li>
                    <strong>
                      {% set parts = [] %}
                      {% if tarif.duree %}{% set parts = parts|merge([tarif.duree]) %}{% endif %}
                      {% if tarif.nb_seances %}{% set parts = parts|merge([tarif.nb_seances]) %}{% endif %}
                      {{ parts|join(' - ') }}/{{ (tarif.prix ?? 0)|number_format(0, ',', ' ') }}€
                    </strong>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}

            {% if prestation.description %}
              <p>{{ prestation.description|nl2br }}</p>
            {% endif %}
          </div>
      </div>
    </div>
     {% else %}
      <p>Aucune prestation pour le moment.</p>
    {% endfor %}

  </div>
</section>

<section class="main-content">
  <div class="container" style="text-align: center;">
    <div class="cta-buttons">
      <a href="/rdv" class="btn">Prendre Rendez-Vous</a>
      <a href="/contact" class="btn">Nous Contacter</a>
    </div>
  </div>
</section>

{% endblock %}