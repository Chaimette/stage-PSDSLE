{% extends 'layout/base.html.twig' %}

{% block title %}Admin - Connexion {% endblock %}

{% block meta_description %}Connexion à l’interface d’administration{% endblock %}
{% block content %}
<section class="hero-section">
  <div class="hero-content">
   <img src="/assets/images/logo-final-trans.png" alt="" style="max-width:400px;">
  </div>
</section>
<div class="card" style="max-width:420px;margin:4rem auto;background:#fff;padding:2rem;border-radius:16px;box-shadow:0 10px 30px rgba(0,0,0,.1)">
    <h1>Connexion Admin</h1>
        {% if error %}<p style="color:#b00020">{{ error }}</p>{% endif %}
    <form method="post" action="/admin/login">
      <input name="email" type="email" placeholder="Email" required>
      <input name="password" type="password" placeholder="Mot de passe" required>
      <button>Se connecter</button>
    </form>
  </div>
{% endblock %}