{% extends 'layout/base.html.twig' %}

{% block title %}Admin - Connexion
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="/assets/css/pages/login.css">
{% endblock %}
{% block meta_description %}Connexion à l’interface d’administration
{% endblock %}
{% block content %}
	<section class="hero-section">
		<div class="hero-content">
			<img src="/assets/images/logo-final-trans.png" alt="" style="max-width:400px;">
		</div>
	</section>
	<div class="auth-wrap">
		<div class="auth-card">
			<h1>Connexion Admin</h1>
			{% if error %}
				<p class="text-muted error" style="color:#b00020">{{ error }}</p>
			{% endif %}
			<form method="post" action="/admin/login">
				<input type="hidden" name="csrf" value="{{ csrf }}"/>
				<input name="email" type="email" placeholder="Email" required>
				<input name="password" type="password" placeholder="Mot de passe" required>
				<button class="btn btn-primary">Se connecter</button>
			</form>
		</div>
	</div>

{% endblock %}
